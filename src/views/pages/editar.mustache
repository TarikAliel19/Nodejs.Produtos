{{>partials/header}}

<div class="form-container">
    <h2>Editar de Produto</h2>
    <form action="/editar/{{id}}" method="POST">
      <div class="form-group">
        <h3 for="nome">Nome do Produto:</h3>
        <input type="text" id="nome" name="nome" value="{{product.nome}}">
      </div>
      <div class="form-group">
        <h3 for="valor">Valor (R$):</h3>
        <input type="number"min="0" max="100" id="valor" name="valor" step="any" value="{{product.valor}}">
      </div>
      <div class="form-group">
        <h3 for="quantidade">Quantidade:</h3>
        <input type="number" min="0" max="100" id="quantidade" name="quantidade" value="{{product.quantidade}}"> <!
      </div>
      <br>
      <div class="form-group">
        <button type="submit">Salvar Produto</button>
      </div>
    </form>
  </div>
